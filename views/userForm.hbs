<form class="form_validation_reg">
								<div class="formSep">
									<div class="row-fluid">
										<div class="span4">
											<label>First name <span class="f_req">*</span></label>
											<input type="text" name="reg_first_name" class="span12" />
											<span class="help-block">help block</span>
										</div>
										<div class="span4">
											<label>Last name <span class="f_req">*</span></label>
											<input type="text" name="reg_last_name" class="span12" />
										</div>
									</div>
								</div>
								<div class="formSep">
									<div class="row-fluid">
										<div class="span4">
											<label>City <span class="f_req">*</span></label>
											<input type="text" name="reg_city" class="span12" />
										</div>
										<div class="span4">
											<label>Zip Code</label>
											<input type="text" name="reg_zip" class="span12" />
										</div>
									</div>
								</div>
								<div class="formSep">
									<div class="row-fluid">
										<div class="span8">
											<label>Your message <span class="f_req">*</span></label>
											<textarea name="reg_your_message" id="reg_your_message" cols="10" rows="3" class="span8"></textarea>
										</div>
									</div>
								</div>
								<div class="formSep">
									<div class="row-fluid">
										<div class="span4">
											<label><span class="error_placement">Checkboxes</span> <span class="f_req">*</span></label>
											<label class="checkbox inline">
												<input type="checkbox" value="option1" name="reg_days" /> Monday
											</label>
											<label class="checkbox inline">
												<input type="checkbox" value="option2" name="reg_days" /> Tuesday
											</label>
											<label class="checkbox inline">
												<input type="checkbox" value="option3" name="reg_days" /> Wednesday
											</label>
											<label class="checkbox inline">
												<input type="checkbox" value="option4" name="reg_days" /> Thursday
											</label>
											<label class="checkbox inline">
												<input type="checkbox" value="option5" name="reg_days" /> Friday
											</label>
										</div>
										<div class="span4">
											<label><span class="error_placement">Gender</span> <span class="f_req">*</span></label>
											<label class="radio inline">
												<input type="radio" value="option6" name="reg_gender" />
												Male
											</label>
											<label class="radio inline">
												<input type="radio" value="option7" name="reg_gender" />
												Female
											</label>
										</div>
									</div>
								</div>
								<div class="form-actions">
									<button class="btn btn-inverse" type="submit">Save changes</button>
									<button class="btn">Cancel</button>
								</div>
							</form>


